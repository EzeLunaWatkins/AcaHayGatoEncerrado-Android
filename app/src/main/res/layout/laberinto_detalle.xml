<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@id/laberinto_detail_container">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/laberinto_nombre"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/button_mostrar_inventario"
        android:layout_alignStart="@+id/button_mostrar_inventario"
        android:layout_alignRight="@+id/button_mostrar_inventario"
        android:layout_alignEnd="@+id/button_mostrar_inventario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/laberinto_descripcion"
        android:layout_above="@+id/button_mostrar_inventario"
        android:layout_centerHorizontal="true" />
</LinearLayout>