<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@id/laberinto_detail_container"
    android:weightSum="1"
    android:focusable="false"
    android:touchscreenBlocksFocus="false"
    android:orientation="vertical">

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/laberinto_nombre"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="346dp"
        android:layout_height="0dp"
        android:id="@+id/laberinto_imagen"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.66" />

    <EditText
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:id="@+id/laberinto_descripcion"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <Button
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_mostrar_inventario"
        android:text="@string/button_mostrar_inventario"
        android:layout_gravity="center_horizontal" />

</LinearLayout>